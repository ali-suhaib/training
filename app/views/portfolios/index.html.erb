<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th>Main image</th>
      <th>Thumb image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to "Create new item ", new_portfolio_url %>

  <tbody>
    <% @portfolios_item.each do |portfolio| %>
      <tr>
        <td><%= portfolio.title %></td>
        <td><%= portfolio.subtitle %></td>
        <td><%= portfolio.body %></td>
        <td><%# image_tag portfolio.main_image unless portfolio.main_image.nil? %></td>
        <td><%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %></td>
        <td> <%= link_to "Edit", edit_portfolio_path(portfolio.id) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
