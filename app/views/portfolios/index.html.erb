<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <%= link_to "Create new item ", new_portfolio_url %>

  <tbody>
    <% @portfolios_items.each do |portfolio| %>

        <p> <%= link_to portfolio.title, portfolio_show_path(portfolio) %> </p>
        <p> <%= portfolio.subtitle %> </p>
        <p> <%= portfolio.body %> </p>
        <%# image_tag portfolio.main_image unless portfolio.main_image.nil? %>
        <p> <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %> </p>
        <p> <%= link_to "Edit", edit_portfolio_path(portfolio.id) %> </p>
        <p><%= link_to "Destroy", portfolio, method: :delete, data: { confirm: "Are u sure ?"}  %> </p>

    <% end %>
  </tbody>
</table>

